<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container mt-5">
        <div class="row">
            <%- include('../partials/alert') %>
            <div class="col-md-12">
                <div class="card mb-3">
                    <h5 class="text-dark text-center">Giriş Yap</h5>
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-4">
                                <img src="../../static/images/register.png" alt="" class="img-fluid">
                            </div>
                            <div class="col-md-8">
                                <form method="post">
                                    <div class="mb-3">
                                        <label for="email" class="form-label">E-Mail:</label>
                                        <input type="email" class="form-control" id="email" name="email" aria-describedby="alreadyTaken">
                                    </div>
                                    <div class="mb-3">
                                        <label for="password" class="form-label">Password:</label>
                                        <input type="password" class="form-control" id="password" name="password">
                                    </div>
                                    <div class="d-grid">
                                        <button type="submit" class="btn" id="signUpBtn">Giriş Yap</button>
                                    </div>
                                    <div class="my-3 d-flex align-items-center justify-content-between">
                                        <span>Üye değil misin ? <a href="/auth/register/customer">Üye Ol</a></span>
                                        <a href="/auth/reset-password" class="float-end">Şifremi Unuttum</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/alert') %>
    <%- include('../partials/script') %>
</body>
</html>
